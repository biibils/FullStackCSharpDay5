@model IEnumerable<StudentMVC.Models.Student>;

@{
	ViewData["Title"] = "Daftar Siswa";
}

<h2>@ViewData["Title"]</h2>

<form method="get" asp-action="Index" class="mb-4">
    <div class="row g-2 align-items-center">
        <div class="col-md-6 col-lg-4">
            <div class="input-group">
                <span class="input-group-text">
                    üîç
                </span>
                <input type="text"
                       name="searchName"
                       class="form-control"
                       placeholder="Cari berdasarkan nama siswa..."
                       value="@Context.Request.Query["searchName"]" />
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">
                Cari
            </button>
        </div>
    </div>
</form>


<p>
	<a class="btn btn-success" asp-action="Create">Tambah Siswa Baru</a>
</p>

<table class="table table-hover align-middle">
	<thead class="table-light">
		<tr>
			<th style="width:60px">No</th>
            <th>Nama</th>
            <th>Email</th>
            <th style="width:80px">Usia</th>
            <th style="width:140px">Presensi</th>
            <th style="width:220px"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
                <td class="fw-semibold">@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Age</td>

                <!-- Presensi -->
                <td>
                    <a asp-controller="Attendance" asp-action="Create" asp-route-studentId="@item.Id" class="btn btn-sm btn-success">Isi Presensi</a>
                </td>

                <!-- Aksi -->
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detail</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Hapus</a>
                    </div>
                </td>
			</tr>
		}
	</tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}