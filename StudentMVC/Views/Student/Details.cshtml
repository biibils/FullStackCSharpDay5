@model StudentMVC.Models.Student;

@{
	ViewData["Title"] = "Detail Siswa";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title mb-4">
            @ViewData["Title"]
        </h4>

        <div class="row mb-3">
            <div class="col-sm-3 text-muted">Nama</div>
            <div class="col-sm-9 fw-semibold">@Model.Name</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-3 text-muted">Umur</div>
            <div class="col-sm-9">@Model.Age</div>
        </div>

        <div class="row mb-4">
            <div class="col-sm-3 text-muted">Email</div>
            <div class="col-sm-9">@Model.Email</div>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="Edit"
               asp-route-id="@Model.Id"
               class="btn btn-primary">
                Edit
            </a>

            <a asp-action="Index"
               class="btn btn-outline-secondary">
                Kembali
            </a>
        </div>
    </div>
</div>
