@model StudentMVC.Models.Student

@{
    ViewData["Title"] = "Edit Data Siswa";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title mb-4">@ViewData["Title"]</h5>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold">Nama</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Age" class="form-label fw-semibold">Umur</label>
                <input asp-for="Age" type="number" class="form-control" />
                <span asp-validation-for="Age" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary px-4">
                    Simpan Perubahan
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    Kembali
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}