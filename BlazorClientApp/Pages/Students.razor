@page "/students"
@using StudentMVC.Models
@inject HttpClient Http

<h1>Daftar Siswa</h1>

@if (students == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Email</th>
				<th>Age</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var student in students)
			{
				<tr>
					<td>@student.Id</td>
					<td>@student.Name</td>
					<td>@student.Email</td>
					<td>@student.Age</td>
				</tr>
			}
		</tbody>
	</table>
}

@code {
	private Student[]? students;

	protected override async Task OnInitializedAsync()
	{
		try
		{
			// Sesuaikan dgn URL API
			students = await Http.GetFromJsonAsync<Student[]>("api/students?api-version=1.0");
		}
		catch (HttpRequestException ex)
		{
			Console.WriteLine($"Error fetching students: {ex.Message}");
		}
	}
}
