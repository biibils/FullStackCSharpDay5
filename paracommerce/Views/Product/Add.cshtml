@model paracommerce.Models.Product

@{
    ViewBag.Title = "Tambah Produk Baru";
}

<h2>Tambah Produk Baru</h2>

<form asp-action="Add" method="post">
    <div class="form group">
        <label asp-for="Name" class="control-label">Nama Produk</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form group">
        <label asp-for="Description" class="control-label">Deskripsi</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form group">
        <label asp-for="Price" class="control-label">Harga</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form group">
        <label asp-for="Stock" class="control-label">Stok</label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="form group">
        <input type="submit" value="Tambah Produk" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}