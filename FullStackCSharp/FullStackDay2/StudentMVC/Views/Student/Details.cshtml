@model StudentMVC.Models.Student;

@{
	ViewData["Title"] = "Detail Siswa";
}

<h2>@ViewData["Title"]</h2>

<div>
	<h4>@Model.Name</h4>
	<dl class="row">
		<dt class = "col-sm-2">
			Umur
		</dt>
		<dd class = "col-sm-10">
			@Model.Age
		</dd>
		<dt class = "col-sm-2">
			Email
		</dt>
		<dd class = "col-sm-10">
			@Model.Email
		</dd>
	</dl>
</div>

<p>
	<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
	<a asp-action="Index">Kembali ke Daftar</a>
</p>